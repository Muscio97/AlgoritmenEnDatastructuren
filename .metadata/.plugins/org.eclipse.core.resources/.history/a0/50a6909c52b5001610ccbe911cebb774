def machtv3(a,n):
    assert n > 0
    m = 1
    while n > 0:
        
        if n%2 == 0:
            print(n)
            m = m * (a**2)**n//2
            print(n)
            n = n / 2
            print(n)
        else:
            print(n)
            m = m * a**(n-1)
            print(n)
            n = n - 1
            print(n)
        if n>0:
            m = m / a**n
    #print("  ",m)
    return m


print(machtv3(2, 3))